
@{
    ViewBag.Title = "主页";

    List<BuyUnion.Models.Product> products = ViewBag.Products;
}

@Styles.Render("~/bundles/swiper/css")

<div class="homeIndexM">
    <div class="homeIndexM-swiper">
        <div class="swiper-container">
            <div class="swiper-wrapper">
                <div class="swiper-slide swiper-img swiper-img-01">
                    <div class="arrow-up"></div>
                </div>
                @foreach (var item in products)
                {
                    <div class="swiper-slide swiper-product">
                        <div class="swiper-slide-info">
                            <div class="swiper-product-img">
                                <img src="@Url.ResizeImage(item.Image, 500, 500, mode: BuyUnion.Enums.ResizerMode.Crop)" />
                            </div>
                            <a id="btns" class="swiper-product-btns" href="@Url.Action("Details", "Product", new { id=item.ID })">
                                <img src="~/Content/Images/home/home_slide_02_btns.png"/>
                            </a>
                        </div>

                        <div class="arrow-up"></div>
                        <div class="linkToMobile-tip hidden">
                            <div class="linkToMobile-tip-wrapper">
                                <img class="" crossorigin="anonymous" src="@Url.Action("Index", "QrCode", new { data =Url.ContentFull( Url.Action("Details", "Product", new { id = item.ID }) )})" />
                                <div class="linkToMobile-tip-name">请用手机扫描二维码，浏览详情页面</div>
                                <span id="closed" class="glyphicon glyphicon-remove"></span>
                            </div>
                        </div>
                    </div>
                }

                <div class="swiper-slide swiper-img swiper-img-02"></div>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    @Scripts.Render("~/bundles/swiper/js")
    @Scripts.Render("~/bundles/homeIndex")
}